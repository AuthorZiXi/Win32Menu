<Window x:Class="Win32MenuWpfDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Win32MenuWpfDemo"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="Win32Menu - NativeMenu Test Demo" Height="450" Width="800">
    <StackPanel>
        <CheckBox Content="SetupAsSystemMenu" x:Name="CheckBox1"/>
        <Button Content="SetMenu" Click="Button_Click"/>
        <Button Content="RemoveMenu" Click="Button_Click_1"/>
        <TextBlock>
            Note: Please do not switch to the main window menu when it is the system menu. <LineBreak/>
            In any case, only the same window can have the same menu.<LineBreak/>
            Please don't do this, as it may cause some unpredictable problems.<LineBreak/>
            The menu is not a shared data structure/record.
        </TextBlock>
    </StackPanel>
</Window>
